
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-2 card">
            <form action="/update-category" method="post">
                <h2>Edit Category</h2>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="hidden" name="hdn_id" value="<%=catedata.id%>">
                            <input type="text" class="form-control" placeholder="" id="title" name="title" value="<%=catedata.title%>">
                        </div>
                    </div>
                    <!--  col-md-6   -->

                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control" rows="5"><%=catedata.description%></textarea>
                        </div>
                    </div>
                    <!--  col-md-6   -->
                </div>
               
                <div class="row mt-2">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary mb-2">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>